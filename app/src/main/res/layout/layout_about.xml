<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_logo"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null"
        android:id="@+id/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:text="@string/info_1"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:padding="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:text="@string/info_2"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:padding="5dp"
        android:id="@id/text2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gmail_ngarak"
        android:id="@+id/email_txt"
        android:padding="5dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        android:textColor="@color/design_default_color_primary"
        app:drawableStartCompat="@drawable/ic_gmail" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone_ngarak"
        android:padding="5dp"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/email_txt"
        android:id="@+id/phone_txt"
        android:gravity="center_vertical"
        android:textColor="@color/design_default_color_primary_dark"
        app:drawableStartCompat="@drawable/ic_whatsapp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showAd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@id/phone_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        app:icon="@drawable/ic_cita_small" />

</androidx.constraintlayout.widget.ConstraintLayout>